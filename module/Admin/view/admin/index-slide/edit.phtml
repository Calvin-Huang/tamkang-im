<script>

//圖片預覽上傳
$('input[type=file]').each(function(index) {
    $(this).change(function() {
        if (this.files && this.files[0]) {
            var fileReader = new FileReader();
            fileReader.readAsDataURL(this.files[0]);
            fileReader.onload = function(e) {
                $('#preview-slide').css('background-image', 'url(' + e.target.result + ')');
            }
        } else {
            $('#preview-slide').css('background-image', 'url(' + this.value + ')');
        }
    })
});

$('.css-checkbox').on('click', function(){
    $('.css-checkbox').not($(this)).attr('checked', false);
    $('#color').val($('.css-checkbox:checked').val());
    // $(this).attr('checked', true);
});
</script>